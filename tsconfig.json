{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "jsx": "react",
    "strict": true,

    "baseUrl": "./",
    "paths": {
      "@pages/*": ["./src/pages"],
      "@static/*": ["./src/static/"],
      "@components/*": ["./src/components/"]
    },

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
